#!/bin/sh

INPUT=${LIVE_BASE}${LIVE_CHANN_ID}
echo "Removing ${DIR} files"
rm -f ${DIR}/*
echo "Streaming $INPUT"

ffmpeg -analyzeduration 3000000 -f mpegts -i "$INPUT" -map_metadata -1 -map_chapters -1 -threads 0 -sn -codec:v:0 copy  -flags -global_header -vsync cfr -codec:a:0 copy -f hls -max_delay 5000000 -avoid_negative_ts disabled -start_at_zero  -hls_time 2  -hls_flags delete_segments  -hls_list_size 15  -hls_segment_filename "${DIR}/${LIVE_CHANN_ID}-%09d.ts"  -y  "${DIR}/stream.m3u8"
